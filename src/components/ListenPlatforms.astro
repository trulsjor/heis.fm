---
import SpotifyIcon from './icons/spotify.svg';
import ApplePodcastsIcon from './icons/apple-podcasts.svg';
import PodMeIcon from './icons/podme.svg';
import OvercastIcon from './icons/overcast.svg';
import PocketCastsIcon from './icons/pocket-casts.svg';
import RssIcon from './icons/rss.svg';

interface Provider {
  id: string;
  name: string;
  href: string;
  Icon: typeof SpotifyIcon;
}

const providers: Provider[] = [
  { id: 'spotify', name: 'Spotify', href: 'https://open.spotify.com/show/3eajQxynkZ1EywIlShVXjR?si=b11c5f57b9ab4624', Icon: SpotifyIcon },
  { id: 'apple', name: 'Apple Podcasts', href: 'https://podcasts.apple.com/us/podcast/heis/id1845368746', Icon: ApplePodcastsIcon },
  { id: 'overcast', name: 'Overcast', href: 'https://overcast.fm/itunes1845368746', Icon: OvercastIcon },
  { id: 'pocket-casts', name: 'Pocket Casts', href: 'https://pocketcasts.com/podcast/heis/701e6a60-8a35-013e-55da-025671e558a9', Icon: PocketCastsIcon },
  { id: 'podme', name: 'PodMe', href: 'https://podme.com/no/podkast/rss-heis/', Icon: PodMeIcon },
  { id: 'rss', name: 'RSS', href: '/rss.xml', Icon: RssIcon },
];
---

<section data-testid="listen-section" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
    {providers.map(({ id, name, href, Icon }) => (
      <a
        key={id}
        href={href}
        data-provider={id}
        aria-label={`Åpne heis.fm på ${name}`}
        class="group flex flex-col items-center gap-3 rounded-xl border border-gray-800 bg-zinc-900/40 p-4 text-center transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink hover:border-pink hover:bg-zinc-900"
        target={id === 'rss' ? '_self' : '_blank'}
        rel={id === 'rss' ? undefined : 'noopener noreferrer'}
      >
        <Icon class="h-10 w-10 text-white transition-colors group-hover:text-pink" />
        <span class="text-sm font-medium text-gray-300 transition-colors group-hover:text-white">{name}</span>
      </a>
    ))}
  </div>
</section>
