---
import Layout from '../layouts/Layout.astro';
import EpisodeCard from '../components/EpisodeCard.astro';
import ListenPlatforms from '../components/ListenPlatforms.astro';
import { RSS_FEED_URL } from '../config';
import { parseRssFeed, addEpisodeNumbers } from '../utils/rss';

const rawEpisodes = await parseRssFeed(RSS_FEED_URL);
const allEpisodes = addEpisodeNumbers(rawEpisodes);
const latestEpisodes = allEpisodes.slice(0, 3);
---

<Layout title="heis.fm - Podcast" description="En podcast om teknologi og ledelse av Truls Jørgensen og Audun Fauchald Strand">
	<div data-testid="hero" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
		<div class="flex flex-col md:flex-row gap-8 md:gap-12 items-center">
			<div class="md:w-1/3">
				<img
					src="/cover.jpeg"
					alt="heis.fm podcast cover"
					class="w-full rounded-lg shadow-2xl"
				/>
			</div>
			<div class="md:w-2/3">
				<h1 class="text-4xl md:text-6xl font-bold mb-4">heis.fm</h1>
				<p class="text-xl md:text-2xl text-gray-300 mb-4">
					En podcast om teknologi og ledelse
				</p>
				<p class="text-base text-gray-400">
					Med Truls Jørgensen og Audun Fauchald Strand
				</p>
			</div>
		</div>
	</div>

	<section data-testid="latest-episodes" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 border-t border-gray-800">
		<h2 class="text-3xl font-bold mb-8">Siste episoder</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{latestEpisodes.map((episode) => (
				<EpisodeCard episode={episode} compact={false} />
			))}
		</div>
		<div class="mt-10 text-center">
			<a href="/episodes" class="inline-block border border-pink text-pink hover:bg-pink hover:text-white font-semibold px-6 py-3 rounded-lg transition-colors">
				Se alle episoder
			</a>
		</div>
	</section>

		<ListenPlatforms />
</Layout>
