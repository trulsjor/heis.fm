---
import Layout from '../layouts/Layout.astro';
import EpisodeCard from '../components/EpisodeCard.astro';
import { parseRssFeed } from '../utils/rss';

const RSS_FEED_URL = 'https://feeds.acast.com/public/shows/68d8f5fdacc34956e6156eec';
const allEpisodes = await parseRssFeed(RSS_FEED_URL);
const latestEpisodes = allEpisodes.slice(0, 3);
---

<Layout title="heis.fm - Podcast">
	<div data-testid="hero" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
		<div class="flex flex-col md:flex-row gap-12 items-center">
			<div class="md:w-1/3">
				<img
					src="/cover.jpeg"
					alt="heis.fm podcast cover"
					class="w-full rounded-lg shadow-2xl border-2 border-pink"
				/>
			</div>
			<div class="md:w-2/3">
				<h1 class="text-5xl md:text-6xl font-bold mb-6">heis.fm</h1>
				<p class="text-2xl text-gray-300 mb-8">
					A podcast by Truls Jørgensen and Audun Fauchald Strand
				</p>
				<div class="flex gap-4">
					<a href="/episodes" class="bg-pink hover:bg-pink-hover text-white font-semibold px-6 py-3 rounded-lg transition-colors">
						Listen Now
					</a>
					<a href="/about" class="border border-pink text-pink hover:bg-pink hover:text-white font-semibold px-6 py-3 rounded-lg transition-colors">
						About Us
					</a>
				</div>
			</div>
		</div>
	</div>

	<section data-testid="latest-episodes" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
		<h2 class="text-3xl font-bold mb-8">Latest Episodes</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{latestEpisodes.map((episode) => (
				<EpisodeCard episode={episode} />
			))}
		</div>
		<div class="mt-8 text-center">
			<a href="/episodes" class="inline-block border border-pink text-pink hover:bg-pink hover:text-white font-semibold px-6 py-3 rounded-lg transition-colors">
				View All Episodes
			</a>
		</div>
	</section>

	<section data-testid="hosts" class="bg-gray-900 py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl font-bold mb-12 text-center">Meet Your Hosts</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-6 bg-gray-800 rounded-full flex items-center justify-center text-6xl font-bold text-pink">
						TJ
					</div>
					<h3 class="text-2xl font-bold mb-2">Truls Jørgensen</h3>
					<p class="text-gray-300">
						Co-host of heis.fm
					</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-6 bg-gray-800 rounded-full flex items-center justify-center text-6xl font-bold text-pink">
						AFS
					</div>
					<h3 class="text-2xl font-bold mb-2">Audun Fauchald Strand</h3>
					<p class="text-gray-300">
						Co-host of heis.fm
					</p>
				</div>
			</div>
		</div>
	</section>
</Layout>
